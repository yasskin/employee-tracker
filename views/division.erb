<div class="col-md-3 col-md-offset-2">

<h1>DIVISION</h1>
<h3><%= @division.name %></h3>
<form action="/division/<%= @division.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <button type="submit" class="btn btn-success">Edit</button>
</form>
<form action="/division/<%= @division.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-danger">Delete Division</button>
</form>
<hr>
<br>
<% if @division.employees().any? %>
  <ul>
    <% @division.employees.each do | employee | %>
      <li><a href="/employee/<%= employee.id %>"><%= employee.name %></a></li>
    <% end %>
  </ul>
<% end %>

<h3>Add a employee to a division</h3>

  <form class="form-group" action="/employee/new" method="post">
    <label for="employee-name">employee name</label>
    <input class="form-control" type="text" name="employee-name">
    <input type="hidden" name="division_id" value="<%= @division.id %>">
    <button class="btn btn-primary" type="submit">Add Employee</button>
  </form>

</div>
